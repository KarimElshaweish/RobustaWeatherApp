<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_140sdp"
        android:id="@+id/allLayout"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="@dimen/_140sdp">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/defualt"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/thumbilImageView"
                    android:contentDescription="@string/thumbil" />
                <RelativeLayout
                    android:background="#70000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/itemCityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/ic_location"
                        android:gravity="center"
                        android:textColor="@color/white" />
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/itemCityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_margin="@dimen/_2sdp"
                            android:id="@+id/itemTemp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_temp"
                            android:gravity="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_margin="@dimen/_2sdp"
                            android:id="@+id/itemHumidity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_lhumidity"
                            android:gravity="center"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
