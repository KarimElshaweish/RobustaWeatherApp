<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/defualt"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thumbilImageView"
                android:contentDescription="@string/thumbil" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#70000000"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:layout_margin="@dimen/_2sdp"
                    android:id="@+id/itemCityName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_location"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_margin="@dimen/_2sdp"
                    android:id="@+id/itemTemp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_temp"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_margin="@dimen/_2sdp"
                    android:id="@+id/itemHumidity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_lhumidity"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
